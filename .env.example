# Environment Configuration (use 'development' for local, 'production' for deployment)
NODE_ENV=development
PORT=3001

# Server Configuration
SERVER_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# Security - GENERATE NEW SECRETS FOR PRODUCTION! NEVER USE THESE VALUES!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_64_CHARACTER_STRING_FOR_PRODUCTION
SESSION_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_64_CHARACTER_STRING_FOR_PRODUCTION

# TLS Configuration (for development)
TLS_CERT_PATH=./certs/cert.pem
TLS_KEY_PATH=./certs/key.pem

# File Upload
MAX_FILE_SIZE=50MB
UPLOADS_DIR=./uploads

# Authentication Settings
ENABLE_REGISTRATION=true
DEFAULT_USERS_ENABLED=true
